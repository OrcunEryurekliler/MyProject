@model IEnumerable<MyProject.Core.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h1 class="mb-4">Kullanıcı Listesi</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Adı</th>
                    <th>E-posta</th>
                    <th>TCKN</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.TCKN</td>
                        <td>
                            <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-info btn-sm">Detay</a>
                            <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
